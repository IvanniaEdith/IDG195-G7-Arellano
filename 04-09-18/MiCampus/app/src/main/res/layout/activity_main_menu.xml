<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.MainMenuActivity">

    <Button
        android:id="@+id/btn_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inicio"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Perfil"
        android:gravity="center"
        android:textSize="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_txt_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Row"
        android:textSize="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carrera:"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_txt_carrera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Row"
        android:textSize="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Semestre:"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/tv_txt_semestre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Row"
        android:textSize="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Materias aprobadas:"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/tv_txt_materiasaprobadas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Row"
        android:textSize="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp" />

    <Button
        android:id="@+id/btn_tutores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Más Información"/>

</android.support.v7.widget.LinearLayoutCompat>